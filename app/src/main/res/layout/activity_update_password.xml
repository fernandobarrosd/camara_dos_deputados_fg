<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".private_screens.UpdatePasswordActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:backgroundTint="@color/green_2">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/app_name"/>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/oldPasswordEditText"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:backgroundTint="#68D3A8"
            android:hint="Senha antiga"
            android:inputType="textPassword"
            android:textColorHint="#D5CFCF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/newPasswordEditText"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#68D3A8"
            android:hint="Senha nova"
            android:inputType="textPassword"
            android:textColorHint="#D5CFCF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/updateEmailButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@null"
            android:background="@drawable/bg_radius"
            android:textColor="@color/black"
            android:layout_marginTop="60dp"
            android:text="Atualizar a senha"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:allowClickWhenDisabled="false" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>